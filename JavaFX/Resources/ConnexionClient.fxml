<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cybook.ConnexionClientController">
    <children>
        <!-- Title Label centered at the top -->
        <Label alignment="CENTER" text="Connexion Client" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
            <font>
                <Font name="Arial Bold Italic" size="24.0" />
            </font>
        </Label>

        <!-- Main container VBox for centering the elements -->
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="0.0">
            <!-- Mail Field and Label -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Mail du client :">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="mailField" promptText="Mail du client" />
            </HBox>

            <!-- Buttons -->
            <Button mnemonicParsing="false" onAction="#handleLogin" text="Se Connecter">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToNouveauClient" text="CrÃ©er un nouveau client">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </VBox>

        <!-- Retour Button -->
        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#switchToPageAccueil" text="Retour" />
    </children>
</AnchorPane>
