<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cybook.EmpruntDialogController">
    <children>
        <ComboBox fx:id="clientComboBox" layoutX="14.0" layoutY="14.0" prefWidth="200.0" promptText="Sélectionnez un client" />
        <DatePicker fx:id="dateRetourPicker" layoutX="14.0" layoutY="54.0" prefWidth="200.0" promptText="Sélectionnez la date de retour" />
        <Button fx:id="confirmButton" layoutX="14.0" layoutY="94.0" mnemonicParsing="false" onAction="#handleConfirm" text="Confirmer" />
        <Button fx:id="cancelButton" layoutX="124.0" layoutY="94.0" mnemonicParsing="false" onAction="#handleCancel" text="Annuler" />
    </children>
</AnchorPane>
