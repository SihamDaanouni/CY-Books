<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cybook.Controller" stylesheets="@pageAccueil.css">
    <children>
        <!-- Title Label centered at the top -->
        <Label alignment="CENTER" text="Page d'accueil" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0"  styleClass="label-title">
            <font>
                <Font name="Arial Bold Italic" size="27.0" />
            </font>
        </Label>

        <!-- Main container VBox for centering the elements -->
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <AnchorPane>
                <children>
                    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <Button mnemonicParsing="false" onAction="#switchToConnectedClients" text="Connecter un client" styleClass="button"/>
                        <Button mnemonicParsing="false" onAction="#switchToScene6" text="Rechercher un livre" styleClass="button" />
                        <Button mnemonicParsing="false" onAction="#switchToBorrow" text="Afficher la table des emprunts"  styleClass="button" />
                        <Button mnemonicParsing="false" onAction="#switchToTop10" text="Top 10 des livres empruntés"  styleClass="button" />
                        <Button mnemonicParsing="false" onAction="#disconnect" text="Se déconnecter"  styleClass="button" />
                    </VBox>
                </children>
            </AnchorPane>
        </VBox>
    </children>
</AnchorPane>